# EditorConfig f√ºr WordPress Coding Standards
# https://developer.wordpress.org/coding-standards/wordpress-coding-standards/php/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_style = tab
indent_size = 4

[*.js]
indent_style = tab
indent_size = 4

[*.scss]
indent_style = tab
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
